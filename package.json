{
  "name": "brindille-component",
  "version": "0.0.7",
  "description": "Simple ES6 class to build recursive html components.",
  "main": "lib/index.js",
  "scripts": {
    "start": "NODE_PATH=src ava --watch",
    "build": "BABEL_ENV=production babel src -d lib",
    "test": "nyc ava"
  },
  "ava": {
    "require": [
      "@babel/register",
      "./test/helpers/_setup-browser-env.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "include": [
      "src/index.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brindille/brindille-component.git"
  },
  "keywords": [
    "brindille",
    "component",
    "view"
  ],
  "author": {
    "name": "Guillaume Gouessan",
    "email": "guillaume.gouessan@gmail.com",
    "url": "https://github.com/superguigui"
  },
  "contributors": [
    {
      "name": "Valentin Daguenet",
      "email": "valentin.daguenet@gmail.com",
      "url": "https://github.com/vdaguenet"
    },
    {
      "name": "Laetitia Nanni",
      "email": "laetitia.nanni@gmail.com",
      "url": "https://github.com/LaetitiaNanni"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brindille/brindille-component/issues"
  },
  "homepage": "https://github.com/brindille/brindille-component#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "ava": "^2.4.0",
    "babel-plugin-istanbul": "^5.2.0",
    "browser-env": "^3.3.0",
    "nyc": "^14.1.1",
    "rewire": "^5.0.0",
    "sinon": "^6.0.0"
  }
}
