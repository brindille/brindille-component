{
  "name": "brindille-component",
  "version": "0.0.5",
  "description": "Simple ES6 class to build recursive html components.",
  "main": "lib/index.js",
  "scripts": {
    "compile": "BABEL_ENV=production babel src -d lib",
    "prepublish": "npm run compile",
    "test": "NODE_PATH=src ava",
